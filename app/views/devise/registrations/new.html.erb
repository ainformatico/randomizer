<section class="form col-xs-10 col-xs-offset-1">
<header>
  <h1>Sign up</h1>
</header>
<div class="formBody">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, class:"input" %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email,  class:"input"%></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class:"input" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"input" %></div>

  <div><%= f.submit "Sign up", class:"input" %></div>
<% end %>
<span class="links">
<%= render "devise/shared/links" %>
</span>
</div>
</section>